<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:dita="http://dita-ot.sourceforge.net" name="dita2webhelp-termbrowser">
    
	<import file="build_stats.xml"/>
    
	<target name="dita2webhelp-termbrowser"
	     	depends="doctales.copy.css,
	     	         doctales.hdf,
	     	         doctales.copy.hdf,
	     	         dita2webhelp,
	     	         doctales.terminology.stats"/>
	
	<target name="doctales.copy.css">
		<copy todir="${output.dir}/oxygen-webhelp/resources">
			<fileset dir="${dita.dir}/plugins/org.doctales.terminology/flag-icon-css/"/>
		</copy>
	</target>
	
	<target name="doctales.hdf">
		<property name="args.hdf" value="${output.dir}/oxygen-webhelp/resources/hdf/hdf.xml"/>
	</target>
	
	<target name="doctales.copy.hdf">
		<copy todir="${output.dir}/oxygen-webhelp/resources/hdf/">
			<file file="${dita.dir}/plugins/org.doctales.terminology/hdf/hdf.xml"/>
		</copy>
	</target>
</project>
